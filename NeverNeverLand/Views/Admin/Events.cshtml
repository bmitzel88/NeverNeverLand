@model IEnumerable<NeverNeverLand.Models.ViewModels.EventsViewModel>
@{
    ViewData["Title"] = "Manage Events";
}
<h1>Manage Events</h1>
<a asp-action="CreateEvent" class="btn btn-primary mb-3">Create New Event</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start</th>
            <th>End</th>
            <th>Location</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Title</td>
            <td>@e.StartLocal.ToString("MMM d, yyyy h:mm tt")</td>
            <td>@(e.EndLocal?.ToString("MMM d, yyyy h:mm tt") ?? "-")</td>
            <td>@e.Location</td>
            <td>@e.Description</td>
            <td>
                <a asp-action="EditEvent" asp-route-title="@e.Title" class="btn btn-sm btn-secondary">Edit</a>
                <a asp-action="DeleteEvent" asp-route-title="@e.Title" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
