@{
    ViewData["Title"] = "Frequently Asked Questions";
}
<section class="container my-5">
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">
            <h1 class="h3 mb-4">Frequently Asked Questions</h1>

            <div class="accordion" id="faq">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="q1h">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q1">Can I bring food?</button>
                    </h2>
                    <div id="q1" class="accordion-collapse collapse" data-bs-parent="#faq">
                        <div class="accordion-body small text-muted">
                            Yes—outside food is welcome in designated picnic areas. No alcohol or glass.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="q2h">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q2">Is the park stroller friendly?</button>
                    </h2>
                    <div id="q2" class="accordion-collapse collapse" data-bs-parent="#faq">
                        <div class="accordion-body small text-muted">
                            Yes. Paths are wide and mostly level; some gentle slopes on the trail.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="q3h">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q3">What happens in bad weather?</button>
                    </h2>
                    <div id="q3" class="accordion-collapse collapse" data-bs-parent="#faq">
                        <div class="accordion-body small text-muted">
                            We’re open rain or shine; certain activities may pause during lightning or high winds.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="q4h">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q4">Can I re-enter the park?</button>
                    </h2>
                    <div id="q4" class="accordion-collapse collapse" data-bs-parent="#faq">
                        <div class="accordion-body small text-muted">
                            Same-day re-entry permitted with wristband and receipt.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
