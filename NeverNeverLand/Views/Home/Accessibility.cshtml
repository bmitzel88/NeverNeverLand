@{
    ViewData["Title"] = "Accessibility";
}
<section class="container my-5">
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">
            <h1 class="h3 mb-4">Accessibility</h1>

            <div class="row g-4">
                <div class="col-md-6">
                    <h2 class="h6">Paths & Mobility</h2>
                    <ul class="small text-muted">
                        <li>Wheelchair-friendly pathways (packed gravel / gentle slopes).</li>
                        <li>Benches and rest areas throughout the park.</li>
                        <li>Accessible restrooms near Stage.</li>
                    </ul>

                    <h2 class="h6 mt-4">Sensory Considerations</h2>
                    <ul class="small text-muted">
                        <li>Quiet areas marked on the park map.</li>
                        <li>Some scenes include sound effects; ear defenders welcome.</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h2 class="h6">Companions & Service Animals</h2>
                    <ul class="small text-muted">
                        <li>Companion ticket policy available at admissions.</li>
                        <li>Leashed service animals are welcome.</li>
                    </ul>

                    <h2 class="h6 mt-4">Contact</h2>
                    <p class="small text-muted mb-0">Questions or requests? Email info@neverneverland.example or ask at the Main Entrance.</p>
                </div>
            </div>
        </div>
    </div>
</section>
