@{
    ViewData["Title"] = "Attractions";
}
<section class="container my-5">
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">
            <h1 class="h3 mb-4">Attractions</h1>

            <p class="text-muted">Explore our opening-day locations below.</p>

            <div class="row g-4">
                <!-- Stage -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <a asp-controller="Home" asp-action="Attraction" asp-route-id="stage" class="card card-link h-100 shadow-sm rounded-4">
                        <img src="/images/stage.png" class="card-img-top rounded-top-4" alt="Stage">
                        <div class="card-body">
                            <h2 class="h6 mb-1">Stage</h2>
                            <p class="small text-muted mb-0">Live storytime, character shows, and performances.</p>
                        </div>
                    </a>
                </div>

                <!-- The Shoe -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <a asp-controller="Home" asp-action="Attraction" asp-route-id="the-shoe" class="card card-link h-100 shadow-sm rounded-4">
                        <img src="/images/shoe.png" class="card-img-top rounded-top-4" alt="The Shoe">
                        <div class="card-body">
                            <h2 class="h6 mb-1">The Shoe</h2>
                            <p class="small text-muted mb-0">Walk-through scene from “Old Woman Who Lived in a Shoe.”</p>
                        </div>
                    </a>
                </div>

                <!-- Crooked Old Man’s House -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <a asp-controller="Home" asp-action="Attraction" asp-route-id="crooked-old-man" class="card card-link h-100 shadow-sm rounded-4">
                        <img src="/images/crooked.png" class="card-img-top rounded-top-4" alt="The Crooked Old Man’s House">
                        <div class="card-body">
                            <h2 class="h6 mb-1">The Crooked Old Man’s House</h2>
                            <p class="small text-muted mb-0">Peek inside the crooked little house from the classic rhyme.</p>
                        </div>
                    </a>
                </div>

                <!-- Storybook Trail -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <a asp-controller="Home" asp-action="Attraction" asp-route-id="storybook-trail" class="card card-link h-100 shadow-sm rounded-4">
                        <img src="/images/forest-trail.png" class="card-img-top rounded-top-4" alt="Storybook Trail">
                        <div class="card-body">
                            <h2 class="h6 mb-1">Storybook Trail</h2>
                            <p class="small text-muted mb-0">Forest path featuring the rest of our nursery rhymes.</p>
                        </div>
                    </a>
                </div>
            </div>

            <!-- brief note -->
            <p class="small text-muted mt-4 mb-0">More scenes may be added after opening—check Park News for updates.</p>
        </div>
    </div>
</section>
