@{
    ViewData["Title"] = "Never Never Land";
}

<!-- Hero Section -->
<div class="hero-banner" style="background-image: url('/images/nnl-banner.jpg'); background-size: cover; background-position: center; height: 500px; position: relative;">
    <div class="hero-content text-white text-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <h1 class="display-3 font-weight-bold">Never Never Land</h1>
        <p class="lead">Where storybook dreams come to life</p>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 my-5">
    <div class="card-body p-4 p-md-5">
        <h2 class="h4 text-center mb-4">Explore Never Never Land</h2>

        <div class="row g-4">
            <!-- Attractions -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2 fs-4">🎡</div>
                        <h3 class="h5">Attractions</h3>
                        <p class="text-muted small flex-grow-1">
                            Walk through timeless fairytales with original scenes.
                        </p>
                        <div>
                            <a asp-controller="Home" asp-action="Attractions" class="btn btn-primary w-100">
                                View Attractions
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Events -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2 fs-4">🎭</div>
                        <h3 class="h5">Events</h3>
                        <p class="text-muted small flex-grow-1">
                            Live storytelling, character shows, and magical experiences.
                        </p>
                        <div>
                            <a asp-controller="Home" asp-action="Events" class="btn btn-success w-100">
                                See Events
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Park Pass -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-2 fs-4">🎟️</div>
                        <h3 class="h5">Park Pass</h3>
                        <p class="text-muted small flex-grow-1">
                            Become part of the magic with unlimited seasonal visits.
                        </p>
                        <div>
                            <a asp-controller="ParkPasses" asp-action="Index" class="btn btn-warning w-100">
                                Get a Pass
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Park News & Updates -->
<div class="card border-0 shadow-sm rounded-4 mb-5">
    <div class="card-body p-4 p-md-5">
        <h2 class="h4 text-center mb-4">Park News &amp; Updates</h2>

        <!-- Example two-column news layout; swap for a loop later -->
        <div class="row g-4">
            <div class="col-md-6">
                <div class="border rounded-3 p-3 h-100">
                    <h3 class="h6 mb-1">Restoration Progress</h3>
                    <p class="text-muted small mb-0">
                        The Never Never Land figures are being re-molded, moving us closer to reopening.
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="border rounded-3 p-3 h-100">
                    <h3 class="h6 mb-1">First figure cast</h3>
                    <p class="text-muted small mb-0">
                        We’ve successfully cast a new figure — a big step toward what’s to come.
                    </p>
                </div>
            </div>
        </div>
