<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeverNeverLand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NeverNeverLand.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="top-header d-flex align-items-center justify-content-between px-3 py-2" style="background-color: #e6f2f8;">
            <div class="logo-bar d-flex align-items-center">
                <img src="/images/nnl-logo-vertical.png" alt="Never Never Land" style="height: 120px;" />
            </div>
            <div class="top-buttons d-flex align-items-center gap-2">
                <a href="/Tickets" class="btn btn-sm btn-ticket">TICKETS</a>
                <a href="/Membership" class="btn btn-sm btn-membership">MEMBERSHIP</a>
                <a href="/Donate" class="btn btn-sm btn-donate">DONATE</a>
                <button class="btn btn-sm btn-light ms-3"><i class="fas fa-search"></i></button>
            </div>
        </div>

        <nav class="main-nav d-flex justify-content-center py-2" style="background-color: white; border-top: 1px solid #ddd;">
            <ul class="nav">
                <li class="nav-item"><a class="nav-link nav-main" href="/Visit">VISIT</a></li>
                <li class="nav-item"><a class="nav-link nav-main" href="/Discover">DISCOVER</a></li>
                <li class="nav-item"><a class="nav-link nav-main" href="/Connect">CONNECT</a></li>
                <li class="nav-item"><a class="nav-link nav-main" href="/Contact">CONTACT</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NeverNeverLand - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
