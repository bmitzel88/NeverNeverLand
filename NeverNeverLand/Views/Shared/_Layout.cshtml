@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeverNeverLand</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NeverNeverLand.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="nnl-header sticky-top">
        <!-- Utility Bar -->
        <div class="utility-bar d-flex align-items-center gap-2 px-3">
            <a href="/" class="brand d-inline-flex align-items-center text-decoration-none" aria-label="Never Never Land">
                <img src="/images/nnl-logo-vertical.png" alt="Never Never Land" style="height:72px;" />
                <span class="visually-hidden">Never Never Land</span>
            </a>

            <nav aria-label="Quick actions" class="d-flex align-items-center gap-2 ms-auto">
                <a href="/Tickets" class="btn btn-ticket px-3">TICKETS</a>
                <a href="/ParkPasses" class="btn btn-parkpass px-3">PARK PASS</a>
                <a href="/Gifts" class="btn btn-gifts px-3">GIFTS</a>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form method="post" asp-area="Account" asp-page="/Logout" class="d-inline">
                        <button type="submit" class="btn btn-logout px-3">LOGOUT</button>
                    </form>
                }
                else
                {
                    <a asp-area="Account" asp-page="/Login" class="btn btn-logout px-3">LOGIN</a>
                }
            </nav>
        </div>

        <!-- Main Nav -->
        <nav class="navbar navbar-expand-lg main-nav" aria-label="Main navigation">
            <div class="container-fluid px-3">
                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Attractions">Attractions</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Events">Events</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a asp-area="Account"
                                   asp-page="/Manage/Index"
                                   class="btn btn-brand btn-sm my-2 my-lg-0">
                                    Member Portal
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>

        </nav>
    </header>

    <main id="content" role="main" class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-auto border-top footer-white">
        <div class="container py-3 d-flex flex-wrap justify-content-between align-items-center small text-muted">
            <span>&copy; @DateTime.Now.Year – Never Never Land</span>
            <nav class="d-flex gap-3">
                <a class="link-secondary text-decoration-none" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="link-secondary text-decoration-none" asp-controller="Home" asp-action="Terms">Terms</a>
            </nav>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
