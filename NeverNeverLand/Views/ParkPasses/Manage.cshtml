@model NeverNeverLand.Models.ParkPass
@{
    ViewData["Title"] = "Manage Park Pass";
}

<h1>Manage Park Pass</h1>
<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body">
        <h4>@Model.Type Pass</h4>
        <dl class="row">
            <dt class="col-sm-3">Pass Number</dt>
            <dd class="col-sm-9">@Model.QrToken</dd>
            <dt class="col-sm-3">Season</dt>
            <dd class="col-sm-9">@Model.SeasonYear</dd>
            <dt class="col-sm-3">Valid From</dt>
            <dd class="col-sm-9">@(new System.DateTime(Model.SeasonYear, 4, 1).ToString("MMM d, yyyy"))</dd>
            <dt class="col-sm-3">Valid To</dt>
            <dd class="col-sm-9">@Model.ExpiresAt.ToString("MMM d, yyyy")</dd>
            <dt class="col-sm-3">Guests Included</dt>
            <dd class="col-sm-9">@Model.MaxGuests</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
        <a asp-controller="ParkPasses" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
