@{
    ViewData["Title"] = "Buy Tickets";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fix-highlight-text">
                        🎟️ Buy Tickets
                    </h2>

                    <form asp-action="CreateCheckoutSession" method="post">
                        <label for="email">Email</label>
                        <input type="email" name="email" required />

                        <label for="adultQty">Adult Tickets</label>
                        <input type="number" name="adultQty" min="0" value="1" />

                        <label for="childQty">Child Tickets</label>
                        <input type="number" name="childQty" min="0" value="0" />

                        <button type="submit">Continue to Payment</button>
                    </form>

                    <p class="text-center text-muted mt-3 mb-0 fix-highlight-text" style="font-size: 0.9rem;">
                        Infants under 2 are free and don’t need a ticket.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
